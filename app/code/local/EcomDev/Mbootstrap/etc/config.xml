<config>
    <modules>
        <EcomDev_Mbootstrap>
            <version>0.0.1</version>
        </EcomDev_Mbootstrap>
    </modules>
    <frontend>
        <layout>
            <updates>
                <ecomdev_mbootstrap>
                    <file>mbootstrap.xml</file>
                </ecomdev_mbootstrap>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <ecomdev_mbootstrap>
                <class>EcomDev_Mbootstrap_Block</class>
            </ecomdev_mbootstrap>
            <core>
                <rewrite>
                    <messages>EcomDev_Mbootstrap_Block_Core_Messages</messages>
                </rewrite>
            </core>
        </blocks>
        <models>
            <ecomdev_mbootstrap>
                <class>EcomDev_Mbootstrap_Model</class>
            </ecomdev_mbootstrap>
        </models>
    </global>
</config>

